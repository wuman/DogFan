<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<ScrollView android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_weight="0.8">
		<WebView android:id="@+id/wv" android:layout_width="fill_parent"
			android:layout_height="fill_parent" />
	</ScrollView>
	<LinearLayout android:orientation="horizontal"
		android:background="@android:drawable/bottom_bar" android:paddingTop="6.0dip"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<Button android:id="@+id/btn_ok" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="@string/ok" />
	</LinearLayout>
</LinearLayout>